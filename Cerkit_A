graph TD
    subgraph "Raspberry Pi Pico"
        Pico_3V3("3V3(OUT)")
        Pico_GND("GND")
        Pico_GP15("GP15(IN)")
    end

    subgraph "検出回路"
        Coil(L1: アンテナコイル)
        R1("R1: 1kΩ")
        R2("R2: 10kΩ")
        Q1(Q1: NPNトランジスタ)
    end

    Pico_3V3 --o R2
    R2 --o Pico_GP15
    R2 --o Q1_C(コレクタ)

    Coil --o R1
    R1 --o Q1_B(ベース)

    Q1_E(エミッタ) --o Pico_GND

    Pico_GP15 --o Q1_C
